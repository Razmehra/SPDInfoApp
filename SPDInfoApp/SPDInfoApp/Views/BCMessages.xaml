                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="TapGestureRecognizerEdit_Tapped" CommandParameter="{Binding FBID}"/>
                                                </Image.GestureRecognizers>
                                            </Image>
                                            <Image Source="delete.png" HeightRequest="20" WidthRequest="20" ClassId="{Binding FBID}">
